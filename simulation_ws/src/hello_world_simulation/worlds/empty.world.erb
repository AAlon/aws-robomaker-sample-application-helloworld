<?xml version="1.0" encoding="utf-8"?>
<!-- Copy of turtlebot3_gazebo/worlds/empty.world with fixes
     
     Changes:
        - Override default camera position nearer (0,0,0)
        - SDF fix for <scene> inside <world>. See https://github.com/ROBOTIS-GIT/turtlebot3_simulations/pull/65
        - Embedded Ruby parameters, usage: `erb real_time_factor=1,2,4 empty.world.erb > empty.world`
--> 
<%
 real_time_update_rate = (real_time_update_rate || "1000.0").split(',')
 real_time_factor = (real_time_factor || "1").split(',')
 max_step_size = (max_step_size || "0.001").split(',')
 ode_solver_iters = (ode_solver_iters || "150" ).split(',')
 ode_solver_type = (ode_solver_type || "quick")
%>
<sdf version="1.4">
  <world name="default">
    <gui>
      <camera name="default_camera">
        <pose>0.8 -0.75 0.35 0 0.25 2.35</pose>
      </camera>
    </gui>

    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- A ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <scene>
        <ambient>0.4 0.4 0.4 1</ambient>
        <background>0.7 0.7 0.7 1</background>
        <shadows>true</shadows>
    </scene>

    <%  # Physics profiels
        i = 0
        real_time_update_rate.each do |rtu|
            real_time_factor.each do |rtf|
              max_step_size.each do |mss| 
                ode_solver_iters.each do |iters|
                    i = i + 1
                    default = (i == 1) 
                    name = 'rtu=' + rtu.to_s + ',rtf=' + rtf.to_s + ',mss=' + mss.to_s + ',iters=' + iters.to_s
    %>
    <%= "<physics type='ode' name='#{name}' default='#{default}'>" %>
      <real_time_update_rate><%= rtu %></real_time_update_rate>
      <real_time_factor><%= rtf %></real_time_factor>
      <max_step_size><%= mss %></max_step_size>
      <ode>
        <solver>
          <type><%= ode_solver_type %></type>
          <iters><%= iters %></iters>
          <precon_iters>0</precon_iters>
          <sor>1.400000</sor>
          <use_dynamic_moi_rescaling>1</use_dynamic_moi_rescaling>
        </solver>
        <constraints>
          <cfm>0.00001</cfm>
          <erp>0.2</erp>
          <contact_max_correcting_vel>2000.000000</contact_max_correcting_vel>
          <contact_surface_layer>0.01000</contact_surface_layer>
        </constraints>
      </ode>
    </physics>
    <% end %>
    <% end %>
    <% end %>
    <% end %>
  </world>
</sdf>
